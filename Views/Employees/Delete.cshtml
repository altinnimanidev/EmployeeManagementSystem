@model EmployeeManagementSystem.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="flex justify-center mt-8">
    <div class="w-full max-w-md">
        <h2 class="text-2xl font-semibold">@ViewData["Title"]</h2>

        <div class="mt-4 bg-white shadow overflow-hidden sm:rounded-lg">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Are you sure you want to delete this employee?</h3>
            <div class="border-t border-gray-200">
                <dl>
                    <!-- FirstName -->
                    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">First Name</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@Html.DisplayFor(model => model.FirstName)</dd>
                    </div>
                    <!-- LastName -->
                    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Last Name</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@Html.DisplayFor(model => model.LastName)</dd>
                    </div>
                    <!-- Position -->
                    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Position</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@Html.DisplayFor(model => model.Position)</dd>
                    </div>
                    <!-- Salary -->
                    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Salary</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@Html.DisplayFor(model => model.Salary)</dd>
                    </div>
                </dl>
            </div>
        </div>

        <form asp-action="DeleteConfirmed" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-red-600 border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-red-700 active:bg-red-700 focus:outline-none focus:border-red-700 focus:ring focus:ring-red-200 disabled:opacity-25 transition">Delete</button>
            <a asp-action="Index" asp-controller="Home" class="inline-flex items-center px-4 py-2 ml-3 bg-gray-500 border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-gray-700 active:bg-gray-700 focus:outline-none focus:border-gray-700 focus:ring focus:ring-gray-200 disabled:opacity-25 transition">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}